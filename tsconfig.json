{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "noEmit": true,
    "module": "es2015",
    "target": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "styled-system"]
}
